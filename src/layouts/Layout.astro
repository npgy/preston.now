<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />
    <title>Nick Preston</title>
    <style is:global>
      :root {
        --primary-color: #fbbf24;
        --secondary-color: #000000;
        --background-color: #ffffff;
        --text-color: #000000;
        --border-color: #000000;
      }
      body {
        font-family: Arial, Helvetica, sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: var(--background-color);
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }
      .profile-section {
        text-align: center;
        padding: 40px 0;
        background-color: var(--primary-color);
        border: 4px solid var(--border-color);
        box-shadow: 8px 8px 0 var(--border-color);
        margin-bottom: 40px;
      }
      .profile-image {
        width: 200px;
        height: 200px;
        border: 4px solid var(--border-color);
        margin-bottom: 20px;
      }
      h1 {
        font-size: 3rem;
        margin-bottom: 10px;
      }
      .job-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 0;
      }
      .bio {
        max-width: 600px;
        margin: 1rem auto;
        font-size: 1.2rem;
        padding: 0px 10px 0px 10px;
      }
      .social-links {
        margin-top: 1.5rem;
      }
      .social-links a {
        display: inline-block;
        margin: 0 10px;
        padding: 10px;
        background-color: var(--background-color);
        border: 3px solid var(--border-color);
        box-shadow: 4px 4px 0 var(--border-color);
        transition: all 0.3s ease;
        color: blue;
      }
      .social-links a:hover {
        transform: translate(-2px, -2px);
        box-shadow: 6px 6px 0 var(--border-color);
      }
      .section-title {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        text-align: center;
        letter-spacing: 2px;
      }
      .skills-section,
      .projects-section {
        margin-top: 4rem;
      }
      .skills-grid,
      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
      }
      .skill-card,
      .project-card {
        background-color: var(--background-color);
        border: 4px solid var(--border-color);
        box-shadow: 8px 8px 0 var(--border-color);
        padding: 2rem;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: start;
        gap: 0.75rem;
      }

      .project-card {
        justify-content: space-between;
      }

      .skill-card:hover,
      .project-card:hover {
        transform: translate(-4px, -4px);
        box-shadow: 12px 12px 0 var(--border-color);
      }
      .skill-card h2,
      .project-card h3 {
        font-size: 1.5rem;
        margin-top: 0;
      }
      .button {
        display: inline-block;
        background-color: var(--primary-color);
        color: var(--text-color);
        padding: 12px 24px;
        text-decoration: none;
        font-weight: bold;
        border: 3px solid var(--border-color);
        box-shadow: 4px 4px 0 var(--border-color);
        transition: all 0.3s ease;
        margin-top: 1rem;
      }
      .button:hover {
        transform: translate(-2px, -2px);
        box-shadow: 6px 6px 0 var(--border-color);
      }
      .resume-section {
        text-align: center;
        margin-top: 4rem;
      }
      footer {
        text-align: center;
        padding: 2rem 0;
        margin-top: 4rem;
        background-color: var(--primary-color);
        border-top: 4px solid var(--border-color);
      }
      @media (max-width: 768px) {
        .skills-grid,
        .projects-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
